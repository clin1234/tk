# The TestCase itself:
test image-1.1 {move 10 10}\
-setup ::TEST::_setup \
-body {
    set id [.c create image 100 100 -image _oval]
    .c move $id 10 10
    .c coords $id
}\
-result {110.0 110.0}

test image-1.2 {coords 10 10}\
-setup ::TEST::_setup \
-body {
    set id [.c create image 100 100 -image _oval]
    .c coords $id 110.0 110.0
    .c coords $id
}\
-result {110.0 110.0}

test line-1.1 {line coords} \
-setup ::TEST::_setup \
-result {200 201 250 202} \
-body {
    lassign [.c coords [.c create line 200 201 250 202]] l t r b
    return [list \
               [expr { round($l) }] \
               [expr { round($t) }] \
               [expr { round($r) }] \
               [expr { round($b) }]]

} 

test line-1.2 {line {coords after move}} \
-setup ::TEST::_setup \
-result {220 221 270 222} \
-body {
    set line [.c create line 200 201 250 202]
    .c move $line 20 20
    lassign [.c coords $line] l t r b
    return [list \
               [expr { round($l) }] \
               [expr { round($t) }] \
               [expr { round($r) }] \
               [expr { round($b) }]]

}

test line-1.3 {line {Strokedash as .}} \
-setup ::TEST::_setup \
-result {} \
-body {
    set line [.c create line 200 201 250 202 \
                  -strokedash {0.1 0.2}]
    return {}
}

