    path_canvas-1.13 {-insertborderwidth 1.3 1 2.6x {bad screen distance "2.6x"}}
    path_canvas-1.14 {-insertofftime 100 100 3.2 {expected integer but got "3.2"}}
    path_canvas-1.15 {-insertontime 100 100 3.2 {expected integer but got "3.2"}}
    path_canvas-1.16 {-insertwidth 1.3 1 6x {bad screen distance "6x"}}
    path_canvas-1.17 {-relief groove groove
	1.5 {bad relief "1.5": must be flat, groove, raised, ridge, solid, or sunken}}
    path_canvas-1.18 {-selectbackground #110022 #110022
	bogus {unknown color name "bogus"}}
    path_canvas-1.19 {-selectborderwidth 1.3 1
	badValue {bad screen distance "badValue"}}
    path_canvas-1.20 {-selectforeground #654321 #654321
	bogus {unknown color name "bogus"}}
    path_canvas-1.21 {-takefocus "any string" "any string" {} {}}
    path_canvas-1.22 {-width 402 402 xyz {bad screen distance "xyz"}}
    path_canvas-1.23 {-xscrollcommand {Some command} {Some command} {} {}}
    path_canvas-1.24 {-yscrollcommand {Another command} {Another command} {} {}}
} {
    lassign $testinfo name goodValue goodResult badValue badResult
    test $testname-good "configuration options: good value for $name" \
-setup ::TEST::_setup \
-result $goodResult \
-body {
	.c configure $name $goodValue
	lindex [.c configure $name] 4
}
    incr i
    if {$badValue ne ""} {
	test $testname-bad "configuration options: bad value for $name" \
-setup ::TEST::_setup \
-returnCodes error \
-result $badResult \
-body {
    .c configure $name $badValue
}
    }
    .c configure $name [lindex [.c configure $name] 3]
    incr i
}

